---
import "@styles/global.css";
const { title = "QRStyles" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/frame1.svg" type="image/svg+xml" />
    <link rel="stylesheet" />
  </head>
  <body
    class="flex flex-col justify-between transition-colors duration-300 font-sans min-h-dvh
  dark:from-stone-900 dark:via-stone-700 dark:to-stone-500 dark:text-gray-100
  bg-gradient-to-b from-stone-300 via-stone-500 to-stone-700 text-gray-900"
  >
    <header class="fixed top-0 left-0 right-0 bg-white dark:bg-stone-800 shadow-md z-10">
      <h1 class="text-4xl font-bold text-center my-4">QRStyles</h1>
    </header>
    <main class="max-w-2xl mx-auto p-4 mt-24">
      <slot />
    </main>
    <footer class="text-sm text-gray-500 dark:text-gray-400 py-6">
      <p class="flex items-center justify-center gap-2">
        Hecho por
        <a
          target="_blank"
          rel="noopener noreferrer"
          href="https://pittanapatricio.vercel.app"
          class="inline-flex items-center gap-1 hover:underline"
        >
          <img src='/logo-dev.svg' alt="Pittana Patricio Dev" class="h-5" />
        </a>
        con Astro. Â© {new Date().getFullYear()}
      </p>
    </footer>
  </body>
</html>
